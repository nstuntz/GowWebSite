
@model IEnumerable<GowWebSite.Models.CityPayItem>
<div class="col-sm-12">
    <h3>Cart</h3>

    <h4>New Items</h4>
    <ul class="list-group">
        @foreach (GowWebSite.Models.CityPayItem item in Model)
        {
            <li class="list-group-item">@item.City.CityName - @item.PayItem.Description<span class="badge">$@item.PayItem.Cost.ToString("F")</span></li>
        }
    </ul>
    <h5>Additional Costs = @ViewBag.NewCost.ToString("F")</h5>

    <h5>Total Subscription Cost = @ViewBag.TotalCost.ToString("F")</h5>
    <div class ="col-sm-12">
        <div class ="col-sm-2">@Html.ActionLink("Add Another City", "CreateFull", "City",null, new { @class = "btn btn-primary" })</div>

        <div class="col-sm-10">
            @if (Model.Count() > 0)
            {
                <form action="https://www.sandbox.paypal.com/cgi-bin/webscr" method="post" target="_top">
                    <input type="hidden" name="cmd" value="_xclick-subscriptions">
                    <input type="hidden" name="business" value="@System.Configuration.ConfigurationManager.AppSettings["MerchantID"]">
                    <input type="hidden" name="item_name" value="GoW Minion Subscription">
                    <input type="hidden" name="custom" value="@User.Identity.Name">
                    <input type="hidden" name="a1" value="@ViewBag.NewCost.ToString("F")">
                    <input type="hidden" name="p1" value="@ViewBag.TrialDays">
                    <input type="hidden" name="t1" value="D">
                    <input type="hidden" name="a3" value="@ViewBag.TotalCost.ToString("F")">
                    <input type="hidden" name="p3" value="1">
                    <input type="hidden" name="t3" value="M">
                    <input type="hidden" name="src" value="1">
                    @if (ViewBag.ExistingSubscription)
                    { 
                        <input type="hidden" name="modify" value="2">
                    }
                    else
                    {
                        <input type="hidden" name="modify" value="0">
                    }
                    <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_subscribeCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
                    <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
                </form>
            }

        </div>
     </div>
</div>